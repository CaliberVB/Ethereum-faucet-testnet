FROM node:18-alpine as builder

ARG NEXT_PUBLIC_WALLET_ADDRESS
ARG NEXT_PUBLIC_ALCHEMY_SEPOLIA_RPC
ARG NEXT_PUBLIC_DEFAULT_WALLET_ETH_AMOUNT
ARG NEXT_PUBLIC_PRIVILEGED_WALLET_ETH_AMOUNT
ARG NEXT_PUBLIC_ENABLE_CAPTCHA
ARG NEXT_PUBLIC_RECAPTCHA_SITE_KEY
ARG NEXT_PUBLIC_ALCHEMY_GOERLI_RPC
ARG NEXT_PUBLIC_MUMBAI_RPC
ARG NEXT_PUBLIC_BASE_RPC
ARG NEXT_PUBLIC_ARBITRUM_GOERLI_RPC
ENV NEXT_PUBLIC_WALLET_ADDRESS=$NEXT_PUBLIC_WALLET_ADDRESS
ENV NEXT_PUBLIC_ALCHEMY_SEPOLIA_RPC=$NEXT_PUBLIC_ALCHEMY_SEPOLIA_RPC
ENV NEXT_PUBLIC_DEFAULT_WALLET_ETH_AMOUNT=$NEXT_PUBLIC_DEFAULT_WALLET_ETH_AMOUNT
ENV NEXT_PUBLIC_PRIVILEGED_WALLET_ETH_AMOUNT=$NEXT_PUBLIC_PRIVILEGED_WALLET_ETH_AMOUNT
ENV NEXT_PUBLIC_DEFAULT_WALLET_BNB_AMOUNT=$NEXT_PUBLIC_DEFAULT_WALLET_BNB_AMOUNT
ENV NEXT_PUBLIC_ENABLE_CAPTCHA=$NEXT_PUBLIC_ENABLE_CAPTCHA
ENV NEXT_PUBLIC_RECAPTCHA_SITE_KEY=$NEXT_PUBLIC_RECAPTCHA_SITE_KEY
ENV NEXT_PUBLIC_ALCHEMY_GOERLI_RPC=$NEXT_PUBLIC_ALCHEMY_GOERLI_RPC
ENV NEXT_PUBLIC_MUMBAI_RPC=$NEXT_PUBLIC_MUMBAI_RPC
ENV NEXT_PUBLIC_BASE_RPC=$NEXT_PUBLIC_BASE_RPC
ENV NEXT_PUBLIC_ARBITRUM_GOERLI_RPC=$NEXT_PUBLIC_ARBITRUM_GOERLI_RPC
ENV NEXT_PUBLIC_BNB_RPC=$NEXT_PUBLIC_BNB_RPC

WORKDIR /app
COPY package.json .
COPY yarn.lock .
RUN yarn install
COPY . .
RUN NEXT_PUBLIC_WALLET_ADDRESS=$NEXT_PUBLIC_WALLET_ADDRESS NEXT_PUBLIC_ALCHEMY_SEPOLIA_RPC=$NEXT_PUBLIC_ALCHEMY_SEPOLIA_RPC NEXT_PUBLIC_DEFAULT_WALLET_ETH_AMOUNT=$NEXT_PUBLIC_DEFAULT_WALLET_ETH_AMOUNT NEXT_PUBLIC_PRIVILEGED_WALLET_ETH_AMOUNT=$NEXT_PUBLIC_PRIVILEGED_WALLET_ETH_AMOUNT NEXT_PUBLIC_ENABLE_CAPTCHA=$NEXT_PUBLIC_ENABLE_CAPTCHA NEXT_PUBLIC_RECAPTCHA_SITE_KEY=$NEXT_PUBLIC_RECAPTCHA_SITE_KEY NEXT_PUBLIC_ALCHEMY_GOERLI_RPC=$NEXT_PUBLIC_ALCHEMY_GOERLI_RPC NEXT_PUBLIC_MUMBAI_RPC=$NEXT_PUBLIC_MUMBAI_RPC NEXT_PUBLIC_BASE_RPC=$NEXT_PUBLIC_BASE_RPC NEXT_PUBLIC_ARBITRUM_GOERLI_RPC=$NEXT_PUBLIC_ARBITRUM_GOERLI_RPC yarn build

FROM node:18-alpine

WORKDIR /app
COPY --from=builder /app/.next/standalone .
COPY --from=builder /app/.next/static ./.next/static
COPY --from=builder /app/public ./public
CMD [ "node", "./server.js" ]
